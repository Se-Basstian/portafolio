---
interface Img {
   src: string;
   alt: string;
}
interface Props {
    imagen: Img;
    titulo: string;
    texto:string
}

const {imagen, titulo, texto} = Astro.props;
---
<div class:list={["card-formacion"]}>
    <img
        class:list={["card-formacion__img"]}
        src={imagen.src}
        alt={imagen.alt}
    >
    <p class:list={["card-formacion__parrafo"]}>
        <b
          class:list={["card-formacion__titulo"]}
        >{titulo}</b>
        <br>
        {texto}
    </p>
</div>

<style>
    .card-formacion {
        inline-size: 368px;
        block-size: 352px;
        display: flex;
        flex-flow: column;
        justify-content: space-between;
        background-color: white;
        border-radius: 15px;

        @media (width <= 768px) {
            inline-size: 224px;
        }

        @media (width <= 519px) {
            inline-size: 90%;
        }
    }

    .card-formacion__img {
        inline-size: 192px;
        align-self: center;
        margin-block: auto;
    }

    .card-formacion__parrafo {
        font-size: 1.6rem;
        block-size: 69px;
        background-color: #eaf2fd;
        padding-block-start: 8px;
        padding-inline-start: 8px;
        margin: 0;

        @media  (width <= 768px) {
            font-size: 1.4rem;
        }

        @media (width <= 360px) {
            inline-size: auto;
        }
    }

    .card-formacion__titulo {
        font-size: 2.2rem;

        @media (width <= 768px) {
            font-size: 1.6rem;
        }
    }

</style>
