<script>

const contieneMenu = document.querySelector(
  ".contineMenu",
) as HTMLElement | null;

const menuHamburguesa = document.querySelector(
 ".menuHamburguesa",
) as HTMLElement | null;

const menuNav = document.querySelector(
  "nav",
) as HTMLElement | null;

const menuCerrar = document.querySelector(
  ".menuCerrar",
) as HTMLElement | null;

const links = document.querySelectorAll("a");


if (
  contieneMenu &&
  menuHamburguesa &&
  menuCerrar &&
  menuNav
) {

  contieneMenu.addEventListener("click", () => {
    menuHamburguesa.classList.toggle("oculto");
    menuCerrar.classList.toggle("mostrar");
    menuNav.classList.toggle("mostrarMenu");
  })

  if (links.length !== 0) {
    links.forEach((link) => {
        link.addEventListener("click",() => {
          menuNav.classList.toggle("mostrarMenu");
          menuHamburguesa.classList.toggle("oculto");
          menuCerrar.classList.toggle("mostrar");
        });
    });
  }

}

</script>

